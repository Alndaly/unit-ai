{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "sourceMap": false,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "strict": true,
        "isolatedModules": true,
        "types": [
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
    },
    "include": [
        "src/**/*.ts",
        "@unit-ai/backend/src/**/*.ts"
    ],
    "exclude": [
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}